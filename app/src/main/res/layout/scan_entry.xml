<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/infoCompany_scan"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:hint="@string/uiDepartment"
        android:maxLines="1"
        android:singleLine="true"
        android:theme="@android:style/Theme.Holo.InputMethod" />

    <EditText
        android:id="@+id/infoName_scan"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoCompany_scan"
        android:layout_marginTop="15dp"
        android:hint="@string/Name"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingTop="20dp"
        android:theme="@android:style/Theme.Holo.InputMethod" />

    <Spinner
        android:id="@+id/infoPackage_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/infoDepartment_scan"
        android:layout_marginTop="15dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <Spinner
        android:id="@+id/infoDepartment_scan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoName_scan"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

</RelativeLayout>