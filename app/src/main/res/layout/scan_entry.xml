<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/infoCompany_scan"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:hint="@string/uiDepartment"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        android:theme="@android:style/Theme.Holo.InputMethod" />

    <EditText
        android:id="@+id/infoName_scan"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoCompany_scan"
        android:layout_marginTop="5dp"
        android:hint="@string/Name"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@android:color/black"
        android:theme="@android:style/Theme.Holo.InputMethod" />

    <Spinner
        android:id="@+id/infoPackage_count"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-5dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <Spinner
        android:id="@+id/infoDepartment_scan"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="10dp"
        android:paddingBottom="20dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:text="@string/CountText"
        android:textColorHint="@android:color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoName_scan"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/DepartmentText"
        android:textColorHint="@android:color/black" />

</RelativeLayout>